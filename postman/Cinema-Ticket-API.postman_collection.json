{
  "info": {
    "name": "Cinema Ticket API",
    "description": "Colecao para validar o fluxo completo da API de cinema.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "health"
          ]
        }
      }
    },
    {
      "name": "Create Session",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"movieTitle\": \"Filme X\",\n  \"roomName\": \"Sala 1\",\n  \"startsAt\": \"2026-02-13T22:00:00Z\",\n  \"priceCents\": 2500,\n  \"totalSeats\": 16\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/sessions",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "sessions"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('status 201 or 200', function () { pm.expect([200,201]).to.include(pm.response.code); });",
              "const json = pm.response.json();",
              "if (json && json.id) { pm.collectionVariables.set('sessionId', String(json.id)); }"
            ]
          }
        }
      ]
    },
    {
      "name": "List Sessions",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/sessions",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "sessions"
          ]
        }
      }
    },
    {
      "name": "Get Session By Id",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/sessions/{{sessionId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "sessions",
            "{{sessionId}}"
          ]
        }
      }
    },
    {
      "name": "Get Session Availability",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/sessions/{{sessionId}}/availability",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "sessions",
            "{{sessionId}}",
            "availability"
          ]
        }
      }
    },
    {
      "name": "Patch Session",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"movieTitle\": \"Filme X (Atualizado)\",\n  \"priceCents\": 3000\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/sessions/{{sessionId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "sessions",
            "{{sessionId}}"
          ]
        }
      }
    },
    {
      "name": "Create Reservation",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"sessionId\": {{sessionId}},\n  \"userId\": \"{{userId}}\",\n  \"seatNumbers\": [\"A1\", \"A2\"]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/reservations",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "reservations"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('status 201 or 200', function () { pm.expect([200,201]).to.include(pm.response.code); });",
              "const json = pm.response.json();",
              "if (json && json.reservationId) { pm.collectionVariables.set('reservationId', String(json.reservationId)); }"
            ]
          }
        }
      ]
    },
    {
      "name": "Confirm Payment",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/reservations/{{reservationId}}/confirm-payment",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "reservations",
            "{{reservationId}}",
            "confirm-payment"
          ]
        }
      }
    },
    {
      "name": "Get Purchase History by User",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/reservations/users/{{userId}}/purchases",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "reservations",
            "users",
            "{{userId}}",
            "purchases"
          ]
        }
      }
    },
    {
      "name": "Delete Session",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/sessions/{{sessionId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "sessions",
            "{{sessionId}}"
          ]
        }
      }
    },
    {
      "name": "Outbox Metrics",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/admin/outbox/metrics",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "admin",
            "outbox",
            "metrics"
          ]
        }
      }
    },
    {
      "name": "Outbox Retry Failed",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/admin/outbox/retry-failed",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "admin",
            "outbox",
            "retry-failed"
          ]
        }
      }
    },
    {
      "name": "Swagger UI",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api-docs",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api-docs"
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001"
    },
    {
      "key": "sessionId",
      "value": "1"
    },
    {
      "key": "reservationId",
      "value": ""
    },
    {
      "key": "userId",
      "value": "user-1"
    }
  ]
}
